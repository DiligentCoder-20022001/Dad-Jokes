
@{
    ViewData["Title"] = "GetByAuthor";
}

<h1>Your dad jokes</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th scope="col">Author</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var joke in ViewBag.Jokes)
        {
            <tr>
                <td>@joke.Id</td>
                <td>@joke.Question</td>
                <td>@joke.Answer</td>
                <td>@joke.Author</td>
            </tr>
        }
    </tbody>
</table>

