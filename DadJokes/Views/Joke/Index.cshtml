

<h1>All Jokes</h1>
<form>
    <button class = "btn btn-primary" asp-action = "Create" asp-controller = "Joke">Create</button>
</form>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th scope="col">Author</th>
      <th scope = "col">Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var joke in ViewBag.Jokes)
        {
            <tr>
                <td>@joke.Id</td>
                <td>@joke.Question</td>
                <td>@joke.Answer</td>
                <td>@joke.Author</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                      <button type="button" class="btn btn-success">Update</button>
                      <button type="button" class="btn btn-danger">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

