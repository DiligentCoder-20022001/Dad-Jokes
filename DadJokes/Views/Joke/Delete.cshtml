@model DadJokes.Models.ViewModels.JokeVM
@inject Microsoft.AspNetCore.Identity.SignInManager<DadJokes.Models.ApplicationUser> signInManager
<h2>Update your joke</h2>
<div class = "row">
    <div class = "col-md-8">
        <section id = "loginForm">
            <form id = "account" method = "post" asp-controller = "Joke" asp-action = "Create">
                <h4>Let's tickle a few people</h4>
                <hr/>
                <div asp-validation-summary = "ModelOnly" class = "text-danger">
                </div>
                <input id = "Id" asp-for = "Id" value = "@ViewBag.joke.Id" hidden readonly/>
                <input id = "Author" asp-for = "Author" value = "@User.Identity.Name" hidden readonly/>
                <div class = "form-group row">
                    <label class = "col-md-2" asp-for = "Question"></label>
                    <div class = "col-md-10">
                        <input value = "@ViewBag.joke.Question" id = "Question" asp-for = "Question" class = "form-control" readonly/>
                        <span asp-validation-for = "Question" class = "text-danger"></span>
                    </div>
                </div>
                <div class = "form-group row">
                    <label class = "col-md-2" asp-for = "Answer"></label>
                    <div class = "col-md-10">
                        <input value = "@ViewBag.joke.Answer" id = "Answer" asp-for = "Answer" class = "form-control" readonly/>
                        <span asp-validation-for = "Answer" class = "text-danger"></span>
                    </div>
                </div>
                <div class = "form-group">
                    <div class = "col-md-10 offset-md-2">
                        <button type = "button" class = "btn btn-danger" onclick = "deleteJoke();return false">Delete</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
